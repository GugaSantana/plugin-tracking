{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "ListenPricing",
  "version": "1.0",
  "manifest_version": 2,
  "description": "__MSG_description__",
  "default_locale": "en",
 
  "background": {
    "persistent": true,
    "page": "background.htm"
  },
  "options_page": "options.htm",
  "browser_action": {
    "default_title": "ListenPricing",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "*://*/",
    "chrome://favicon/",
    "unlimitedStorage",
    "notifications"
  ]
}
